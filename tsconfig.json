{
  "compilerOptions": {
    "target": "ES2020", // Good balance for async/await support
    "module": "CommonJS", // Required for Node CLI
    "rootDir": "src", // Source folder
    "outDir": "dist", // Output folder
    "strict": true, // Enable all strict type-checking options
    "esModuleInterop": true, // Allow default imports from CommonJS
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true, // Speeds up builds
    "resolveJsonModule": true, // Allow importing .json files
    "moduleResolution": "node", // Use Node-style resolution
    "declaration": true // Optional: Emit .d.ts files
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
